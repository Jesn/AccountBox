{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=../../../../../data/accountbox.db",
    "_Comment_SQLite": "SQLite: Data Source=../../../../../data/accountbox.db (从 build/AccountBox.Api/bin/Debug/net8.0 到 backend/data)",
    "_Comment_PostgreSQL": "PostgreSQL: Host=localhost;Port=5432;Database=accountbox;Username=accountbox;Password=accountbox123",
    "_Comment_MySQL": "MySQL: Server=localhost;Port=3306;Database=accountbox;User=accountbox;Password=accountbox123"
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:5093",
      "http://localhost:5173"
    ]
  },
  "JwtSettings": {
    "_Comment": "SecretKey 将在首次启动时自动生成，或从环境变量 JWT_SECRET_KEY 读取",
    "Issuer": "AccountBox",
    "Audience": "AccountBox-Web",
    "ExpirationHours": 24,
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "ValidateLifetime": true,
    "ValidateIssuerSigningKey": true
  },
  "LoginThrottle": {
    "MaxFailedAttempts": 5,
    "CooldownSeconds": 60,
    "WindowMinutes": 15
  },
  "Authentication": {
    "_Comment": "MasterPassword 将在首次启动时自动生成，或从环境变量 MASTER_PASSWORD 读取"
  }
}
